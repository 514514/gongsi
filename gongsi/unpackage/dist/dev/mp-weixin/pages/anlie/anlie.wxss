.fixedButton {
  position: fixed;
  bottom: 20px;
  right: 20px;
  background-color: #f44336;
  color: white;
  padding: 15px;
  border: none;
  border-radius: 50%;
  cursor: pointer;
  font-size: 24px;
}
.chanpin {
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: flex-start;
  background-color: #fefefe;
  box-shadow: inset 0 0 0 2px white, 0.3em 0.3em 1em rgba(0, 0, 0, 0.3);
}
.chanpin-image {
  width: 340rpx;
  margin: 0 auto;
  height: 280rpx;
  background-color: #fefefe;
  box-shadow: inset 0 0 0 2px white, 0.3em 0.3em 1em rgba(0, 0, 0, 0.3);
}
.chanpinleft {
  margin-left: 25rpx;
  height: 300rpx;
  width: 340rpx;
}
.chanpinright {
  margin-right: 25rpx;
  height: 300rpx;
  width: 340rpx;
}
.text {
